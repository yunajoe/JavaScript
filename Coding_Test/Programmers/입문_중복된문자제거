function makeResult(Obj){  
    let result = {};
    for (const [key, value] of Object.entries(Obj)) { 
          if (key === "undefined") continue;
          if (value.length >= 2) {
            const newValue = Array.from(value);
            //  remove all the elements after 0 index
            newValue.splice(1);
            result[key] = newValue;
          } else {
            result[key] = value;
          }
    }    
    return result
}     
function solution(my_string) {
    let arr = [...my_string] 
    let dic = {}
    for(let i=0; i<=arr.length; i++){
        // dic[arr[i]]  ==> undefiend 가 나옴.. 
        if(!dic[arr[i]]) {     
            dic[arr[i]] = []               
        }
        dic[arr[i]].push(i)          
    }    
    let result =  makeResult(dic)
    let answer = Object.keys(result).join("")
    return answer
}
