
// 첫번째 시도 
function solution(cipher, code){
    var answer = ''; 
    var cipher_arr = [...cipher]
    for(let i=code-1; i<=cipher_arr.length ; i += code){
        answer += cipher_arr[i]
    }
    return answer  
}


// 두번째 시도
function solution(cipher, code){
    var answer = new Array(); 
    var cipher_arr = [...cipher]
    for(let i=0; i<=cipher_arr.length; i++){
       if( (i+1) % code ===0){
           answer.push(cipher_arr[i])
       }
    }
    return answer.join('')

}
